{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "error",
  "rules": {
    "array-type": [
      true,
      "array-simple"
    ],
    "await-promise": true,
    "interface-name": false,
    "max-classes-per-file": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "instance-method",
          "static-method"
        ]
      }
    ],
    "object-literal-sort-keys": false,
    "only-arrow-functions": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"array": "always"
				},
				"singleline": "never",
				"esSpecCompliant": true
			}
		],
    "triple-equals": true
  }
}
