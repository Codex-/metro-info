{
  "name": "metro-info",
  "version": "0.0.1",
  "description": "Christchurch (Unofficial) MetroInfo API NodeJS library",
  "main": "index.js",
  "scripts": {
    "build": "npm run tsc",
    "clean": "rimraf ./dist",
    "format": "prettier --write \"lib/**/*.{ts,js}\"",
    "lint": "tslint -p tsconfig.json",
    "prebuild": "npm run clean && npm run lint && npm run format",
    "test": "jest",
    "tsc": "tsc -p tsconfig.json",
    "tsc:watch": "npm run tsc -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codex-/metro-info.git"
  },
  "keywords": [
    "bus",
    "metro",
    "metroinfo",
    "connections",
    "api"
  ],
  "author": "Alex Miller <codex.nz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Codex-/metro-info/issues"
  },
  "homepage": "https://github.com/Codex-/metro-info#readme",
  "dependencies": {
    "xml-js": "^1.6.9"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -p tsconfig.json",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
