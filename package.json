{
  "name": "metro-info",
  "version": "1.0.0",
  "description": "Christchurch (Unofficial) MetroInfo API NodeJS library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run tsc",
    "clean": "rimraf ./dist",
    "format": "prettier --write \"lib/**/*.{ts,js}\"",
    "lint": "tslint -p tsconfig.json",
    "postversion": "git push && git push --tags",
    "prebuild": "npm run clean && npm run lint && npm run format",
    "prepublishOnly": "npm run lint && npm run format",
    "preversion": "npm run lint && npm run format",
    "test": "jest",
    "tsc": "tsc -p tsconfig.json",
    "tsc:watch": "npm run tsc -- --watch",
    "version": "git add -A src"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codex-/metro-info.git"
  },
  "keywords": [
    "bus",
    "metro",
    "metroinfo",
    "connections",
    "api"
  ],
  "author": "Alex Miller <codex.nz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Codex-/metro-info/issues"
  },
  "homepage": "https://github.com/Codex-/metro-info#readme",
  "dependencies": {
    "@types/jest": "^23.3.13",
    "@types/request-promise-native": "^1.0.15",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "xml-js": "^1.6.9"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -p tsconfig.json",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/lib/.*(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
