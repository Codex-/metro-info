{
  "name": "metro-info",
  "version": "1.0.6",
  "description": "Christchurch (Unofficial) MetroInfo API NodeJS library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run tsc",
    "clean": "rimraf ./dist",
    "coverage": "jest --coverage --coverageReporters=lcov",
    "format": "npm run format-check -- --write",
    "format-check": "prettier --check \"lib/**/*.{ts,js}\"",
    "lint": "tslint -p tsconfig.json",
    "posttest": "npm run lint && npm run format-check",
    "postversion": "git push && git push --tags",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm run format-check && npm run lint",
    "preversion": "npm run format-check && npm run lint",
    "test": "jest",
    "tsc": "tsc -p tsconfig.json",
    "tsc:watch": "npm run tsc -- --watch",
    "version": "npm run format-check && git add -A src"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codex-/metro-info.git"
  },
  "keywords": [
    "bus",
    "metro",
    "metroinfo",
    "connections",
    "api"
  ],
  "author": "Alex Miller <codex.nz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Codex-/metro-info/issues"
  },
  "homepage": "https://github.com/Codex-/metro-info#readme",
  "dependencies": {
    "node-fetch": "^2.6.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node-fetch": "^2.5.2",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -p tsconfig.json",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/lib/.*(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
